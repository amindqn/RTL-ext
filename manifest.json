{
    "manifest_version": 3,
    "name": "RTL Toggle",
    "version": "1.0",
    "description": "راست‌چین کردن هر صفحه با یک کلیک",
    "action": {
        "default_title": "RTL Toggle",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon16.png",
            "128": "icon16.png"
        }
    },
    "background": {
        "service_worker": "bg.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon16.png",
        "128": "icon16.png"
    }
}