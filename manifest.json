{
    "manifest_version": 3,
    "name": "RTL Toggle",
    "version": "1.1.0",
    "description": "Toggle right-to-left layout on any page with one click.",
    "action": {
        "default_title": "RTL Toggle",
        "default_icon": {
            "16": "assets/icons/off-16.png",
            "24": "assets/icons/off-24.png",
            "32": "assets/icons/off-32.png"
        }
    },
    "background": {
        "service_worker": "src/background/index.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "commands": {
        "toggle-rtl": {
            "suggested_key": {
                "default": "Alt+Shift+R",
                "mac": "Alt+Shift+R"
            },
            "description": "Toggle RTL on active tab"
        }
    },
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    }
}
